{
  "compilerOptions": {
    "strict": true,
    "target": "es2020",
    "module": "commonjs",
    "isolatedModules": true,
    "esModuleInterop": true,
    "importsNotUsedAsValues": "error",
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2020"]
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules/**"
  ]
}
